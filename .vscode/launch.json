{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug_Playwright",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": ["--scrapper_type", "playwright"],
            "console": "integratedTerminal"
        },
        {
            "name": "Debug_Selenium",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": ["--scrapper_type", "selenium"],
            "console": "integratedTerminal"
        },
        {
            "name": "Debug_BeautifulSoup",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": ["--scrapper_type", "beautifullSoup", "--validate", "True"],
            "console": "integratedTerminal"
        },
    ]
}